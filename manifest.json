{
    "manifest_version": 3,
    "name": "Flexmap",
    "version": "0.1",
    "description": "Chrome key mapper",
    "author": "Robin Lake",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "/images/gender.png",
        "48": "/images/gender.png",
        "128": "/images/gender.png"
    },
    "action": {
        "default_icon": {
            "16": "/images/gender.png",
            "48": "/images/gender.png",
            "128": "/images/gender.png"
        },
        "default_title": "Flexmap",
        "default_popup": "html/panel.html"
    },
    "devtools_page": "html/devtools.html",
    "content_scripts": [
        {
            "all_frames": true,
            "matches": [
                "https://*.youtube.com/*",
                "https://*.com/*",
                "<all_urls>"
            ],
            "js": [
                "/js/keybindings.js",
                "/js/youtubeController.js",
                "/js/videoController.js"
            ],
            "css": [
                "/css/style.css",
                "/css/videoController.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "http://*/*",
                "https://*/*",
                "file:///*"
            ],
            "resources": [
                "/js/*",
                "/css/*"
            ]
        }
    ],
    "background": {
        "service_worker": "/js/background.js"
    }
}